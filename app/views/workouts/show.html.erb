<h1><%= @workout.workout %></h1>


<div class="row">
    <div class="col-sm-6">
    
      <div class="table-responsive">
        <table class="table">
          <tbody>
            <tr>
              <td><h2><%= @workout.date.strftime("%A %B %d") %></h2></td>
            </tr>

            <tr>
               <td><%= @workout.duration %></td>
            </tr>

  <div class="row">
    <% @workout.exercises.each do |exercise| %>
      <div class="col-sm-6">
      

  <h2><%= exercise.name %></h2>
  <h2><%= exercise.sets %></h2>
  <h2><%= exercise.reps %></h2>



        </div>
      </div><br>
    <% end %>
    </div>

            <div id="exercises">
            <h3>Exercises</h3>
              <ol>
              <% @workout.exercises.each do | exercise | %>
                <li>
                  <%= exercise.name %>
                </li>
              <% end %>
              </ol>

              </div>
 
          </tbody>
        </table>
      </div><br>
      <%= link_to 'Edit', edit_workout_path(@workout) %> | 
      <%= link_to 'Back', workouts_path %> | 
      <%= link_to "Delete", workout_path(@workout), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>


